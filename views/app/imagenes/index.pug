extends ../../layout.pug
block contenido
 div(class="container")
  h1 Mis Imagenes
   for imagen in imagenes
    .white.border.tr.large-padding
     .row
      .col-md-10
       h2=imagen.title
      .col-md-2
       a(href=`/app/imagenes/${imagen._id}/edit`, class="right-space") Editar
       form(method="POST", action=`/app/imagenes/${imagen._id}?_method=DELETE`, class="link")
        input(type="submit", value="Eliminar")